generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  username      String         @unique
  email         String         @unique
  passwordHash  String
  listings      Listing[]      @relation("UserListings")
  conversations Conversation[] @relation("UserConversations")
  messages      Message[]      @relation("UserMessages")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Listing {
  id            Int            @id @default(autoincrement())
  title         String
  description   String
  price         Float
  image         String?
  location      String?
  sellerId      Int
  seller        User           @relation("UserListings", fields: [sellerId], references: [id])
  conversations Conversation[] @relation("ListingConversations")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Conversation {
  id        Int       @id @default(autoincrement())
  listingId Int
  listing   Listing   @relation("ListingConversations", fields: [listingId], references: [id])
  members   User[]    @relation("UserConversations")
  messages  Message[] @relation("ConversationMessages")
  createdAt DateTime  @default(now())
}

model Message {
  id             Int          @id @default(autoincrement())
  content        String
  listingId      Int
  userId         Int
  user           User         @relation("UserMessages", fields: [userId], references: [id])
  conversation   Conversation @relation("ConversationMessages", fields: [conversationId], references: [id])
  createdAt      DateTime     @default(now())
  conversationId Int
}
