generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  email        String   @unique
  passwordHash String
  listings     Listing[] @relation("UserListings")
  messages     Message[] @relation("UserMessages")

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Listing {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  price       Float    // Listing price
  image       String?  // URL or path to the listing image
  location    String?  // Location of the listing
  sellerId    Int
  seller      User      @relation("UserListings", fields: [sellerId], references: [id])
  messages    Message[] @relation("ListingMessages")

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Message {
  id          Int      @id @default(autoincrement())
  content     String   // Content of the message
  listingId   Int
  userId      Int
  listing     Listing   @relation("ListingMessages", fields: [listingId], references: [id])
  user        User      @relation("UserMessages", fields: [userId], references: [id])

  createdAt   DateTime @default(now())
}
